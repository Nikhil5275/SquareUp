rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write server documents with appropriate permissions
    match /servers/{serverId} {
      // Allow read for authenticated users (needed for invite links)
      allow read: if request.auth != null;

      // Allow create if user is authenticated
      allow create: if request.auth != null;

      // Allow update if user is authenticated and:
      // 1. Is already a member, OR
      // 2. Is the creator, OR
      // 3. Is joining (adding themselves to memberIds)
      allow update: if request.auth != null &&
        (request.auth.uid in resource.data.memberIds ||
         request.auth.uid == resource.data.createdBy ||
         // Allow joining: user is adding themselves to memberIds
         (request.auth.uid in request.resource.data.memberIds &&
          !(request.auth.uid in resource.data.memberIds) &&
          request.resource.data.memberIds.size() == resource.data.memberIds.size() + 1));

      // Allow delete if user is the creator of the server
      allow delete: if request.auth != null &&
        request.auth.uid == resource.data.createdBy;
    }
  }
}
